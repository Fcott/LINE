<h3>Invitation</h3>
<%= link_to "Back", @room %>

<div class="">
  <h3>Friends</h3>
  <% unless @users.blank? %>
    <% @users.each do |user| %>
      <div class="user_top">
        <span class="avatar inline_block">
          <%= image_tag user_picture(user), class: "img-circle pic-middle" %>
          <strong class="user_name"><%= user.username%></strong>
          <% if @room.invited?(user) %>
            <%= link_to "Cancel", room_invitations_path(user_id: user.id), method: :delete %>
          <% else %>
            <%= link_to "Invite", room_invitations_path(user_id: user.id), method: :post %>
          <% end %>
        </span>
      </div>
    <% end %>
  <% end %>
</div>
