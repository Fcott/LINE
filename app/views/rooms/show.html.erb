<% if @room.direct? %>
  <h2><%= @user_names %></h2>
<% else %>
<h2>
  <%= "#{@room.name} (#{@room.users.length})" %>
  <% @user10.each do |user| %>
    <%= image_tag user_picture(user), class: "img-circle pic-small" %>
  <% end %>
</h2>
<%= link_to "Edit", edit_room_path(@room)  %> |
<%= link_to "Leave", room_user_rooms_path(@room), method: :delete %>
<% end %>

<% unless @messages.blank? %>
  <%= render @messages %>
<% end %>
