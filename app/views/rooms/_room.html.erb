<% unless room.messages.blank? %>
  <%= link_to room_path(room) do %>
    <div class="room ">
      <span class="avatar inline-block table_cell">
        <%= image_tag room.image, class: "img-circle pic-middle" %>
      </span>
      <div class="message_info inline-block table_cell">
        <% if room.direct? %>
          <span class="name" data-behavior="room-name" data-room-id='<%= room.id %>'><%= room.members_except(current_user) %></span>
        <% else %>
          <span class="name" data-behavior="room-name" data-room-id='<%= room.id %>'><%= room.name %></span>
        <% end %>
        <span class="timestamp" data-behavior="timestamp" data-room-id='<%= room.id %>'><%= room.messages.last.sent_time %></span>
        <span class="content" data-behavior="content" data-room-id='<%= room.id %>'><%= room.messages.last.content %></span>
      </div>
    </div>
  <% end %>
<% end %>
